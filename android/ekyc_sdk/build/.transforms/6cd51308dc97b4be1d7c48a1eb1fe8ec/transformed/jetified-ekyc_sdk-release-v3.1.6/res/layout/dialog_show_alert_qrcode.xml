<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_15sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp">
        <ImageView
            android:visibility="gone"
            android:id="@+id/btnRemove"
            android:layout_gravity="right"
            android:src="@drawable/ekyc_ic_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/imgStatus"
            android:layout_gravity="center"
            android:src="@drawable/ekyc_ic_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_13sdp"
            android:textColor="@color/md_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/ekyc_notice_from_contest"/>

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ekyc_qrcode_invalid"
            android:gravity="center"
            android:textColor="@color/md_black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tvLogId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ekyc_qrcode_invalid"
            android:gravity="center"
            android:textColor="@color/md_black"
            android:textSize="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            />
    </LinearLayout>



    <TextView
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/btnAccept"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_background_green_btn"
        android:layout_height="wrap_content"
        android:text="@string/ekyc_str_agree"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textColor="@color/md_blue"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="visible"
        android:textSize="@dimen/_12sdp" />

    <TextView
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginRight="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:id="@+id/btnReturn"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_background_green_btn"
        android:layout_height="wrap_content"
        android:text="@string/ekyc_str_retry"
        android:fontFamily="sans-serif-medium"
        android:textAllCaps="true"
        android:textColor="@color/md_blue"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="@dimen/_12sdp" />



</LinearLayout>